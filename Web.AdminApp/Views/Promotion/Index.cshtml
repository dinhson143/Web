@model IEnumerable<Web.ViewModels.Catalog.Promotions.PromotionViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">DANH SÁCH KHUYẾN MÃI</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3" style="display:flex">
            <a asp-action="Create" asp-controller="Category" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus-circle"></i>
                </span>
                <span class="text">Tạo mới danh mục</span>
            </a>
        </div>
        @if (@TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert" style="text-align:center">
                @TempData["Message"]
            </div>
        }

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FromDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ToDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApplyAll)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscountPercent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscountAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FromDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ToDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApplyAll)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscountPercent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscountAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FromDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToDate)
                                </td>
                                <td>
                                    @if (item.ApplyAll == true)
                                    {
                                        <p>All</p>
                                    }
                                    else
                                    {
                                        <p>No</p>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiscountPercent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiscountAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                                    @if (item.Status == "Active")
                                    {
                                        @Html.ActionLink("Khóa", "Block", new { id = item.Id })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Mở khóa", "Block", new { id = item.Id })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        setTimeout(function () {
            $(".alert").fadeOut('slow');
        }, 2000);
    </script>
}