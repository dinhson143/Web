@model List<Web.ViewModels.Catalog.PhieuNhaps.PhieuNXchitietViewModel>
@{
    ViewData["Title"] = "Nhap_Xuat_TonKhoDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Thông Tin Chi Tiết Phiếu Nhập</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3" style="display:flex">
            <a asp-action="Nhap_Xuat_TonKho" asp-controller="Product" style="margin:0 10px;" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-long-arrow-alt-left"></i>
                </span>
                <span class="text">Back To List</span>
            </a>
        </div>
        @if (@TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert" style="text-align:center">
                @TempData["Message"]
            </div>
        }

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="col-sm-2">
                                Tên sản phẩm
                            </th>
                            <th class="col-sm-2">
                                Size
                            </th>
                            <th class="col-sm-2">
                                Số lượng
                            </th>
                            <th class="col-sm-2">
                                Đơn giá
                            </th>
                            <th class="col-sm-2">
                                Giá bán
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="col-sm-2">
                                Tên sản phẩm
                            </th>
                            <th class="col-sm-2">
                                Size
                            </th>
                            <th class="col-sm-2">
                                Số lượng
                            </th>
                            <th class="col-sm-2">
                                Đơn giá
                            </th>
                            <th class="col-sm-2">
                                Giá bán
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSize)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Soluong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dongia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Giaban)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        setTimeout(function () {
            $(".alert").fadeOut('slow');
        }, 2000);
    </script>
}