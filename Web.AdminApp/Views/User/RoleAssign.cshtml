@model Web.ViewModels.Catalog.Users.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Gán quyền</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-group">
                    <label class="control-label">@Model.Roles[i].Name</label>
                    <input asp-for="Roles[i].Selected" type="checkbox" />
                    <input type="hidden" asp-for="Roles[i].Id" class="form-control" />
                    <input type="hidden" asp-for="Roles[i].Name" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>