@model Web.ViewModels.System.User.RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var loai = "";
    var fn = "";
    var ln = "";
    var un = "";
    var pw = "";
    if (@Model != null)
    {
        loai = @Model.loaiRegister;
        fn = @Model.FirstName;
        ln = @Model.LastName;
        un = @Model.Username;
        pw = @Model.Password;
    }
    var culture = CultureInfo.CurrentCulture.Name;
}

@section Scripts{
    <script>
        var loai = '@loai';
        var language = '@culture';
        if (loai == "FB") {
            $('.PW').hide();
            $('.US').hide();
            if (language == "vi") {
                $('.titleContent').text("Điền thông tin để xác nhận đăng nhập FaceBook.")
            }
            else {
                $('.titleContent').text("Complete information to login FaceBook.")
            }
        }
    </script>
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
        <li class="active">Registration</li>
    </ul>
    <h3 class="titleContent">Đăng kí</h3>
    <div class="well">
        <form asp-action="Register" asp-controller="Account" method="post" class="form-horizontal">
            <h4>Your personal information</h4>
            <div asp-validation-summary="ModelOnly" class="text-error">
                <button type="button" class="close" data-dismiss="alert">×</button>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputFname1">First name <sup>*</sup></label>
                <div class="controls">
                    <input type="text" asp-for="FirstName" value="@fn" placeholder="First Name">
                    <span asp-validation-for="FirstName" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputLnam">Last name <sup>*</sup></label>
                <div class="controls">
                    <input type="text" asp-for="LastName" value="@ln" placeholder="Last Name">
                    <span asp-validation-for="LastName" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputLnam">Date of Birth<sup>*</sup></label>
                <div class="controls">
                    <input type="date" asp-for="Dob" placeholder="Date of Birth">
                    <span asp-validation-for="Dob" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="address">Address<sup>*</sup></label>
                <div class="controls">
                    <input type="text" asp-for="Address" placeholder="Adress" /> <span></span>
                    <span asp-validation-for="Address" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input_email">Email <sup>*</sup></label>
                <div class="controls">
                    <input type="email" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="mobile">Mobile Phone </label>
                <div class="controls">
                    <input type="tel" asp-for="Phonenumber" placeholder="Mobile Phone" />
                    <span asp-validation-for="Phonenumber" class="text-error"></span>
                </div>
            </div>
            <div class="control-group US">
                <label class="control-label" for="inputPassword1">User Name</label>
                <div class="controls">
                    <input type="text" asp-for="Username" value="@un" placeholder="UserName">
                    <span asp-validation-for="Username" class="text-error"></span>
                </div>
            </div>
            <div class="control-group PW">
                <label class="control-label" for="inputPassword1">Password <sup>*</sup></label>
                <div class="controls ">
                    <input type="password" asp-for="Password" value="@pw" placeholder="Password">
                    <span asp-validation-for="Password" class="text-error"></span>
                </div>
            </div>
            <div class="control-group PW">
                <label class="control-label" for="inputPassword1">Confirm Password <sup>*</sup></label>
                <div class="controls">
                    <input type="password" asp-for="ConfirmPassword" value="@pw" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-error"></span>
                </div>
            </div>
            <input type="hidden" asp-for="loaiRegister" />
            <div class="control-group">
                <div class="controls">
                    <input type="hidden" name="email_create" value="1">
                    <input type="hidden" name="is_new_customer" value="1">
                    <input class="btn btn-large btn-success" type="submit" value="Register" />
                </div>
            </div>
        </form>
    </div>
</div>