@model Web.ViewModels.Catalog.Categories.CategoryAssignRequest

@{
    ViewData["Title"] = "AssignCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AssignCategory</h1>

<h4>CategoryAssignRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
            </div>
            @for (var i = 0; i < Model.Categories.Count; i++)
            {
                <div class="form-group">
                    <label class="control-label">@Model.Categories[i].Name</label>
                    <input asp-for="Categories[i].Selected" type="checkbox" />
                    <input type="hidden" asp-for="Categories[i].Id" class="form-control" />
                    <input type="hidden" asp-for="Categories[i].Name" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>