@model Web.ViewModels.Catalog.Categories.CategoryAssignRequest

@{
    ViewData["Title"] = "AssignCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assign Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignCategory">
            <div style="display:flex;justify-content:space-around;margin:10px 0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Id" type="hidden" class="form-control" />
                </div>
                @for (var i = 0; i < Model.Categories.Count; i++)
                {
                    <div class="pretty p-default">
                        <input asp-for="Categories[i].Selected" type="checkbox" />
                        <div class="state p-warning">
                            <label>@Model.Categories[i].Name</label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Categories[i].Id" class="form-control" />
                    <input type="hidden" asp-for="Categories[i].Name" class="form-control" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>