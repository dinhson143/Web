@model Web.ViewModels.Catalog.Users.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Gán quyền</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssign">
            <div style="display:flex;justify-content:space-around;margin:10px 0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                </div>
                @for (var i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="pretty p-default">
                        <input asp-for="Roles[i].Selected" type="checkbox" />
                        <div class="state p-warning">
                            <label>@Model.Roles[i].Name</label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Roles[i].Id" class="form-control" />
                    <input type="hidden" asp-for="Roles[i].Name" class="form-control" />
                }
            </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>