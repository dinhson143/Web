@model Web.Models.ProductSavestModel
@{
    ViewData["Title"] = "ProductSavest";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal doanhthu = 0;
    if (Model != null)
    {
        foreach (var item in Model.listOd)
        {
            doanhthu += (item.TongtienReal - item.Tongtien);
        }
    }

}

@section Scripts{
    <script>
        function btnXemClick() {
            var dateF = new Date($('#dateFrom').val());
            var dateT = new Date($('#dateTo').val());
            var day = dateF.getDate();
            var month = dateF.getMonth() + 1;
            var year = dateF.getFullYear();
            var dateFrom = [month, day, year].join('-');
            //
            var day2 = dateT.getDate();
            var month2 = dateT.getMonth() + 1;
            var year2 = dateT.getFullYear();
            var dateTo = [month2, day2, year2].join('-');
            if (isNaN(day) == true || isNaN(day2) == true) {
                $('.noteMes').text("Vui lòng chọn ngày");
                return false;
            }
            if (dateF.getTime() > dateT.getTime()) {
                $('.noteMes').text("Ngày không hợp lệ");
                return false;
            }
        }
    </script>
    <script>
        setTimeout(function () {
            $(".alert").fadeOut('slow');
        }, 2000);
    </script>
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">DOANH THU</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        @if (@TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert" style="text-align:center">
                @TempData["Message"]
            </div>
        }

        <div class="card-body">
            <form asp-action="Doanhthu" asp-controller="ThongKe" method="post" style="text-align:center">
                <label style="margin:0 5px">From</label>
                <input asp-for="From" type="date" id="dateFrom">

                <label style="margin:0 5px">To</label>
                <input asp-for="To" type="date" id="dateTo">

                <button type="submit" onclick="return btnXemClick()" class="btn btn-primary btnXem">Xem</button>
                @if (doanhthu > 0)
            {

                <h3 style="color:green; background-color:yellow">DOANH THU: @doanhthu VND</h3>
            }
            </form>
            
            <p class="noteMes" style="text-align: center; color: red; background-color: cornsilk;"></p>
            <div class="table-responsive" id="hfdfhd">
                @if (Model != null)
                {
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Mã đơn hàng
                                </th>
                                <th>
                                    Ngày đặt hàng
                                </th>
                                <th>
                                    Tổng tiền
                                </th>
                                <th>
                                    Tổng tiền gốc
                                </th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>
                                    Mã đơn hàng
                                </th>
                                <th>
                                    Ngày đặt hàng
                                </th>
                                <th>
                                    Tổng tiền
                                </th>
                                <th>
                                    Tổng tiền gốc
                                </th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.listOd)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tongtien)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TongtienReal)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>